<div class="registration">
  <h2>新規加入</h2>
  <div class="title_registration"><p>登録情報記入(1)</p></div>
  <div class="form_box">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <p>名前</p>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="radio">
        <p>性別</p>
        <div class="radio_button">
          <%= f.radio_button :sex, '男性'%> <%= f.label :man, '男性' %>
          <%= f.radio_button :sex, '女性'%> <%= f.label :woman, '女性' %>
        </div>
      </div>

      <div class="select">
        <p>生年月日</p>
        <div class="birth_date_field">
          <%= raw sprintf( f.date_select(:birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year), default: Date.new(1989, 1, 1), date_separator: '%s'), '年 ', '月 ') + '日' %>
        </div>
      </div>

      <div class="field">
        <p>メールアドレス</p>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
      <p>パスワード <% if @minimum_password_length %>(<%= @minimum_password_length %>文字以上)</p>
        <% end %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <p>パスワード (確認)</p>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="submit">
        <%= f.submit "新規登録" , :class => "button" %>
      </div>
    <% end %>
  </div>
    <div class="more_link_box">
      <%= render "devise/shared/links" %>
   </div>
</div>