<!DOCTYPE html>
<html>
<head>
  <title>Fit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
  <%= csrf_meta_tags %>
  <meta name="viewport"
    content="width=320,
    height=480,
    initial-scale=1.0,
    minimum-scale=1.0,
    maximum-scale=2.0,
    user-scalable=yes" />
</head>
<body>
  <header>
    <h1><a href="/tops">Fit</a></h1> 
    <!-- <h1><%= link_to image_tag('grayscale_logo.png'), tops_path %></h1> -->
        <% if user_signed_in? %>
        <div class="user_nav grid-6">
          <%= link_to "ログアウトあとでけす", destroy_user_session_path, method: :delete %>
        </div>
      <% else %>
        <div class="grid-6">
          <%= link_to "ログイン後で消す", new_user_session_path, class: 'post' %>
          <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
        </div>
      <% end %>
  </header>
  <div class="nav">
    <ul class="clearFix">
      <% if user_signed_in? %>
      <li class="header-nav__list-item nav_top">
        <%= link_to 'マイページ', user_path(current_user.id) %>
      </li>
      <% else %>
      <li class="header-nav__list-item nav_top">
        <%= link_to 'マイページ', new_user_session_path %>
      </li>
      <% end %>
      <li class="header-nav__list-item nav_note">
        <%= link_to '運動記録', '/steps' %>
      </li>

      <li class="header-nav__list-item nav_record">
        <%= link_to '保険料記録', '/insurances' %>
      </li>

      <li class="header-nav__list-item nav_trainer">
        <%= link_to '人間ドック', '/checkups/search' %>
      </li>

      <li class="header-nav__list-item nav_plan">
        <%= link_to 'フィットネス', '/fitnesses/search' %>
      </li>
    </ul>
  </div>

<%= yield %>


  <footer>
    <div class="copyright">
      Copyright (C) 2015  hasegawa Corporation. All Rights Reserved.
    </div>
  </footer>

</body>
</html>
